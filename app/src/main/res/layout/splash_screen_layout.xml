<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:layout_weight="1"
    android:orientation="vertical"
   >

    <ImageView
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/splash_logo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_weight="0.70"
        />
    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:layout_weight="0.10"
        android:layout_margin="50dp"
        android:backgroundTint="@color/colorPrimaryExtraLight"
        android:indeterminate="false"
        android:indeterminateTint="@color/colorPrimaryExtraLight"
        android:indeterminateTintMode="src_in" />

    <TextView
        android:id="@+id/advice_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text=""
        android:textSize="14dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/colorPrimaryBright"
        android:layout_weight="0.1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/app_name"
        android:textSize="30dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/colorPrimaryExtraLight"
        android:layout_weight="0.10"/>

</LinearLayout>
