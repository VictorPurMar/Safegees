<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip"
    android:background="@color/colorPrimaryExtraLight">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_margin="6dip"
        android:contentDescription="TODO"
        android:src="@drawable/default_user_rounded"
        android:layout_alignParentLeft="true"/>

    <LinearLayout
        android:id="@+id/principal_text"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/arrow"
        android:layout_toRightOf="@+id/icon">
        <TextView
            android:id="@+id/name_listview_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Example application example example example example"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryExtraDark"
            android:ellipsize="end"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/email_listview_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:ellipsize="end"
            android:singleLine="true"/>
    </LinearLayout>



    <ImageView
        android:id="@+id/arrow"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:src="@android:drawable/ic_menu_add"
        android:scaleType="fitCenter"/>

</RelativeLayout>
